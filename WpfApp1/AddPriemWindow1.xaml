<Window x:Class="WpfApp1.AddPriemWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Добавить приём" Height="450" Width="800" Background="Chocolate" FontStyle="Italic">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="ФИО врача"
               Grid.Row="0"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               FontSize="24"/>
        <TextBlock Text="Дата"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Grid.Row="1"
               FontSize="24"/>
        <TextBlock Text="Комментарий"
               Grid.Row="3"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="24"/>

        <TextBlock Text="Животное"
        Grid.Row="2"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        FontSize="24"/>

        <ComboBox Grid.Column="1"
          Grid.Row="0"
          Height="45"
          Name="fCm"
          Width="200"
          Margin="10 0 0 0"
          HorizontalAlignment="Left"
          ItemsSource="{Binding doctors }">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding SurName}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Lastname}"/>
                    </StackPanel>

                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <DatePicker x:Name="BirthDateDp"
        Grid.Column="2"
        Grid.Row="1"
        Grid.ColumnSpan="2"
                    Height="45"
HorizontalAlignment="Left"
Margin="10 0 0 0" Width="200"
       />
        <ComboBox Grid.Column="1"
   Grid.Row="2"
   Height="45"
   Name="aCm"
   Margin="10,13,323,14"
   ItemsSource="{Binding animals }">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBox Grid.Column="1"
      Grid.Row="3"
      Name="CommentTb"
      Height="45"
      FontSize="20"
      VerticalContentAlignment="Center"
      HorizontalAlignment="Left"
      Margin="10 0 0 0"
      Width="200"/>

        <Button x:Name="SaveBtn"
            Click="SaveBtn_Click_1"
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Height="50"
            Width="120"
            Content="Сохранить"
            FontSize="20" Background="Green"
                />
    </Grid>
</Window>
